{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "preserveSymlinks": true,
    "rootDir": ".",
    "paths": {
      "vitepress-plugin-permalink/*": ["./dist/*"]
    }
  }
}
